@model qproject.Models.Employee

<h2>Delete Employee</h2>
@using (Html.BeginForm("delete", "home", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(a => a.Id)
    <div class="form-group">
        <label>Email</label>
        <p>@Model.Email</p>
    </div>

    <div class="form-group">
        <label>Name</label>
        <p>@Model.Name</p>
    </div>

    <div class="form-group">
        <label>Image</label>
        <p>@Model.Image</p>
    </div>

    <div>
        <input type="submit" value="Delete" />
    </div>
}


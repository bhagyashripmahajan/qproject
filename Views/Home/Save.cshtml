@model qproject.Models.Employee

<h2>Save</h2>
@using (Html.BeginForm("save", "home", FormMethod.Post, new { id = "popupForm" }))
{
    if (Model != null && Model.Id > 0)
    {
        @Html.HiddenFor(a => a.Id)
    }

    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(a => a.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Email)
    </div>

    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(a => a.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Name)
    </div>

    <div class="form-group">
        <label>Image</label>
        @Html.TextBoxFor(a => a.Image, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Image)
    </div>

    <div>
        <input type="submit" value="Save" />
    </div>
}

